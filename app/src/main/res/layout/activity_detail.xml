<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nujoyw.traffic.DetailActivity"
    android:background="@drawable/wall11">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtTitleDetail"
            android:textSize="@dimen/h1"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text" />

        <ImageView
            android:layout_width="@dimen/imageShow"
            android:layout_height="@dimen/imageShow"
            android:id="@+id/imvTrafficDetail"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <ScrollView
            android:layout_width="@dimen/imageShow"
            android:layout_height="200dp"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="#8cffffff"
            android:padding="15dp"
            android:fillViewport="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtDetail"
                android:textSize="@dimen/h2"
                android:textColor="@color/text" />
        </ScrollView>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:onClick="clickBack"

        android:text="BACK"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
